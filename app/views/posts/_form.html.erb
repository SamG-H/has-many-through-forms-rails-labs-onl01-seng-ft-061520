<%= form_for @post do |f| %>
<div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

<div class="field">
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, {include_blank: true}%>
</div>

<%= f.fields_for :categories, @post.categories.build do |categories_fields| %>
<div class="field">
  <%= categories_fields.label :name %>
  <%= categories_fields.text_field :name %>
</div>
<% end %>

<div class="field">
  <%= f.label :content %>
  <%= f.text_area :content %>
</div>

<%= f.submit %>
<% end %>

